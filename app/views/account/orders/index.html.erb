 <div class="row">
   <div class="col-md-12">

    <h2> 訂單明細 </h2>

    <table class="table table-hover table-bordered">
      <thead>
        <tr>
          <th width="60%">訂單編號</th>
          <th>訂單金額</th>
          <th>訂單狀態</th>
          <th>付款方式</th>
        </tr>
      </thead>

      <tbody>
        <% @orders.each do |order| %>
          <% if !order.is_pay?%>
            <tr class="danger"> 
          <%else%>
            <tr>
          <%end%>     
            <td><%= link_to order.token, order_path(order.token)%></td>
            <td> <%= order.total %> </td>
            <td> <%= order.aasm_state %></td>
            <td> <%= order.payment_method %></td>           
          </tr>      
        <% end %>
      </tbody>
    </table>

   </div>
 </div>