<h2 class="text-center">我的個人後台</h2>
<h3 class="text-center">商品修改</h3>

<%= simple_form_for [:admin, @product] do |f| %>
  <%= f.input :title, label: '商品名稱' %>
  <%= f.input :description, label: '商品介紹' %>
  <%= f.input :price, label: '商品價格(新台幣)' %>
  <%= f.input :quantity, label: '商品數量' %>
  <%= f.submit "Submit", :disable_with => 'Submitting...' %>
<% end %>