<%= simple_form_for [:admin, @product], :html => {:multipart => true} do |f| %>
<div class="row">
  <div class="col-md-4">
  <div class="group">
    <% for photo in @product.photos %>
      <%= image_tag photo.image, :style => "width:100%;" %>
      <%= f.fields_for photo do |p| %>
        <%= p.file_field :image, style: "height:300px;width:300px;"%>
     <% end %>      
    <%end%>    
  </div>
</div>

  <div class="col-md-4">      

  <div class="form-group">
    <%= f.input :title, label: "標題" %>
  </div>
  
  <div class="form-group">
    <%= f.input :description, label: "敘述", input_html: {rows: "5"} %>
  </div>

  <div class="form-group">
    <div class="row">
      <div class="col-xs-3">
        <%= f.input :price, label: "價格" %>
  </div></div>
  </div>

  <div class="form-group">
    <div class="row">
  <div class="col-xs-3">
        <%= f.input :quantity, label: "數量" %>
  </div></div>
  </div>
  
  <div class="checkbox">
    <label>
      <%= f.check_box :for_sale %>上架
    </label>
  </div>
  
  <div class="modal-footer">
        <%= link_to "取消", admin_products_path, :class => "btn btn-default" %>
        <%= f.submit "修改", :class => "btn btn-primary", :disable_with => 'Submiting...' %>
  </div>
 
</div>
<% end %>


