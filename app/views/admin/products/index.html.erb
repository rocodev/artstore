<% @products.each do |product| %>


<div class="row-fluid">
  <ul class="thumbnails">
    <li class="span4">
      <div class="thumbnail">
        <%= image_tag product.image_url(:thumb).to_s %>
        <div class="caption">
          <h3><%= link_to(product.title, admin_product_path(product)) %></h3>
          <p>
          	<p class="text-right">剩餘數量： <%= product.quantity %></p>
          </p>
          <p><%= product.description %></p>
          <h1>$ <%= product.price %></h1>
          <p><a href="#" class="btn btn-danger right">我要購買</a></p>
        </div>
      </div>
    </li>
  </ul>
</div>

<% end %>


