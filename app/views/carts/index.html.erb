 <div class="row">
   <div class="col-md-12">

    <h2> 購物車  <%= link_to "清空購物車" , remove_all_carts_path , :method => :delete, :class=> "btn btn-primary btn-lg btn-danger pull-right"%> </h2>

    <table class="table table-bordered">
      <thead>
        <tr>
          <th>商品資訊</th>
          <th>商品名稱</th>
          <th>單價</th>
          <th>刪除</th>
        </tr>
      </thead>
      <tbody>
        <% current_cart.items.each do |product| %>
        <tr>
          <td><%=image_tag( render_product_photo(product.default_photo)) %></td>

            <td> 
              

              <%= link_to(product.title, admin_product_path(product)) %>
            </td>
            <td> <%= product.price %> </td>

            <td> <%= link_to 'delete', remove_from_cart_product_path(product), :method => :delete ,  :class=> "btn btn-primary btn-lg btn-danger"%></td>
          </tr>
          <% end %>

        </tbody>
      </table>

      <div class="total group">
        <span class="pull-right">
           <span> 總計 <%= render_cart_total_price(current_cart) %> NTD  
        </span>
      </div>
  
      <hr>
      <div class="checkout">
          <%= link_to("確認結賬", checkout_carts_path , :method => :post , :class => "btn btn-primary btn-lg btn-danger pull-right") %>
      </div>


    </div>


  </div>
