 <div class="row">
   <div class="col-md-12">
 
    <h2> 購物車 </h2>
 
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>商品資訊</th>
          <th>品名</th>
          <th>單價</th>
          <th>數量調整</th>
        </tr>
      </thead>

      <tbody>
        <% current_cart.cart_items.each do |item| %>
        <tr>
          <td><%= render_product_photo(item.product.default_photo) %></td>
          <td><%= item.product.title %></td>
          <td><%= item.product.price %> </td>
          <td>
              <%= link_to item_path(item), :method => :delete do %>
                <button class="btn btn-default btn-xs">
                  <i class="glyphicon glyphicon-trash"></i> 
                </button> 
              <% end %> 
          </td>
        </tr>
          <% end %>
        </tbody>
      </table>
 
      <div class="total group">
        <span class="pull-right">
          總計 <%= render_cart_total_price(current_cart) %> NTD  
        </span>
      </div>
  
      <hr>
      <div class="checkout">
          <%= link_to("確認結賬", checkout_carts_path , 
                      :method => :post , 
                      :class => "btn btn-primary btn-lg btn-danger pull-right") %>
          <%= link_to("清空購物車", clear_cart_carts_path , 
                      :method => :delete , 
                      :class => "btn btn-primary btn-lg btn-info pull-right")%>
      </div>
 
 
    </div>
 
 
  </div>