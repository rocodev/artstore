<%= simple_form_for(resource, as: resource_name,
                    url: session_path(resource_name),
                    html: {class: 'form form-horizontal' }) do |f| %>
    <h2>登入</h2>
    <%= f.input :email, required: false, autofocus: true, input_html: { class: 'form-control' } %>
    <%= f.input :password, required: false, input_html: { class: 'form-control' } %>
    <%= f.input_field :remember_me, input_html: { class: 'form-control' }, as: :boolean if devise_mapping.rememberable? %>
    <label class="labelText">Remember Me</label>

    <div class="form-actions">
      <%= f.button :submit, "登入" ,class: 'btn-primary'%>
    </div>
    <%= render "devise/shared/links" %>
<% end %>
