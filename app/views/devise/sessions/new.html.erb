<div class='col-md-4 col-md-offset-4'>
  <div class="panel panel-default">
    <div class="panel-body">
      <h2>登入</h2>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <%= f.input :email, required: false, input_html: { class: 'form-control' },autofocus: true%>
          <%= f.input :password, required: false, input_html: { class: 'form-control' } %>
          <%= f.input :remember_me, as: :boolean ,wrapper_html: { class: 'checkbox' } if devise_mapping.rememberable? %>
          <%= f.button :submit, "登入", class: 'btn btn-warning btn-block' %>
      <% end %>
    <%= render "devise/shared/links" %>
    </div>
  </div>
</div>