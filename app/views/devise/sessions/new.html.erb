<div class="col-md-4 col-md-offset-4">
<div class="panel panel-default">
  <div class="panel-body">

<h2>Sign in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div><%= f.input :email, input_html: { class: 'form-control' }, autofocus: true %></div>

  <div><%= f.input :password, input_html: { class: 'form-control' }, autocomplete: "off" %></div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.input :remember_me, as: :boolean, boolean_style: :inline %></div>
  <% end -%>

  <div><%= f.submit 'Sign in', :class => 'btn btn-default' %></div>
<% end %>

<%= render "devise/shared/links" %>

  </div>
</div>
</div>

