<!DOCTYPE html>
<html>
<head>
  <title>Artstore</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="navbar navbar-default navbar-fixed-top" role="navigation">
	<div class="navbar-header">
		<%= link_to "我的商店", products_path, :class => "navbar-brand" %>
	</div>
	<div class="navbar-form navbar-right">
		<div> 
          <%= link_to carts_path do  %>
            購物車 <i class="glyphicon glyphicon-shopping-cart"> </i> (<%= cart_items_count(current_cart) %>)
          <% end %>
        </div>
<% if !current_user %>
	<%= link_to "登入", new_user_session_path, :class => "btn btn-default" %>&nbsp;<%= link_to "註冊", new_user_registration_path, :class => "btn btn-default", :style => "margin-right: 10px;" %>
<% else %>
	<%= current_user.email %>&nbsp;<%= link_to "管理後台首頁", admin_products_path, :class => "btn btn-default" %>&nbsp;<%= link_to "登出", destroy_user_session_path, :method => :delete, :class => "btn btn-default", :style => "margin-right: 10px;" %></p>
<% end %>
		
	</div>
</div>

<div class="container">
<%= notice %>
<%= alert %>
<%= yield %>
</div>

</body>
</html>
